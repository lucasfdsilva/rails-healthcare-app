<table class="table table-striped table-hover table-bordered">
  <thead class="table-danger">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.email %></td>
        <td><%= link_to 'Show', doctor, class:"btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', doctor, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path, class:"btn btn-danger" %>
