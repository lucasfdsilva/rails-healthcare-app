<h1>My Patients</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-danger">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
  	<% @user = User.where("doctor_id LIKE ?", params[:user_id]) %>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<br/><br/>
<% @users = User.all %>
<% @users.each do |user| %>
  <%= user.email %><br/>
<% end %>

